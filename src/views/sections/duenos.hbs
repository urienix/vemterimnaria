<div class="wrapper">
    {{>navigation}}
    <div id="content">
        {{>navtop}}

        <div class="container-fluid">
            <div class="nes-container w-100 mt-4">
                <div class="d-flex w-100 mb-2 justify-content-between">
                    <h3>Dueños</h3>
                    <a class="nes-btn is-success" href="/duenos/nuevo" style="padding: 2px;">+ Crear dueño</a>
                </div>

                <div class="nes-table-responsive">
                    <table class="nes-table is-bordered is-centered">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Identificación</th>
                                <th>Residencia</th>
                                <th>Teléfono residencia</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each duenos}}
                            <tr>
                                <td>{{NOMBRE_COMPLETO}}</td>
                                <td>{{IDENTIFICACION}}</td>
                                <td>{{DIRECCION_RESIDENCIA}}</td>
                                <td class="text-center">{{TELEFONO_RESIDENCIA}}</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button type="button" class="nes-btn is-warning" title="Editar" dueno-id="{{ID_DUENO}}" data-function="editar"><i class="mdi mdi-pencil"></i></button>
                                        <button type="button" class="nes-btn is-error" title="Borrar" dueno-id="{{ID_DUENO}}" data-function="eliminar"><i class="mdi mdi-trash-can"></i></button>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
    }
</script>