<div class="wrapper">
    {{>navigation}}
    <div id="content">
        {{>navtop}}

        <div class="container-fluid">
            <div class="nes-container w-100 mt-4">
                <div class="d-flex w-100 mb-2 justify-content-between">
                    <h3>Pacientes</h3>
                    <a class="nes-btn is-success" href="/pacientes/nuevo" style="padding: 2px;">+ nuevo paciente</a>
                </div>

                <div class="nes-table-responsive">
                    <table class="nes-table is-bordered is-centered">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Raza</th>
                                <th>Especie</th>
                                <th>Due√±o</th>
                                <th>Primera cita</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each pacientes}}
                            <tr>
                                <td>{{NOMBRE}}</td>
                                <td>{{RAZA}}</td>
                                <td>{{ESPECIE}}</td>
                                <td>{{DUENO}}</td>
                                <td>{{FECHA_PRIMERA_CITA}}</td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a class="nes-btn is-warning" title="Editar" href="/duenos/editar/{{ID_PACIENTE}}" style="padding: 2px;"><i class="mdi mdi-pencil"></i></a>
                                        <a class="nes-btn is-error" title="Borrar" href="/duenos/eliminar/{{ID_PACIENTE}}" style="padding: 2px;"><i class="mdi mdi-trash-can"></i></a>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
    }
</script>