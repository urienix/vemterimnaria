<div class="wrapper">
    {{>navigation}}
    <div id="content">
        {{>navtop}}
        <div class="container-fluid">
            <div class="nes-container w-100 mt-4 text-center">
                <h4 class="nes-text is-primary mt-4">EDITAR DATOS DE DUEÑO</h4>
                <div class="container mt-4 p-4" style="max-width: 700px;">
                    <form action="/duenos/editar" method="POST">
                        <div class="container">
                            <input type="hidden" name="vid_dueno" value="{{dueno.ID_DUENO}}">
                            <div class="nes-field mb-4">
                                <label for="vnombre_completo"> Nombre</label>
                                <input type="text" name="vnombre_completo" class="nes-input" required value="{{dueno.NOMBRE_COMPLETO}}">
                            </div>
                            <br>
                            <div class="nes-field mb-4">
                                <label for="vtelefono_residencia"> Telefono residencia</label>
                                <input type="text" name="vtelefono_residencia" class="nes-input" required value="{{dueno.TELEFONO_RESIDENCIA}}">
                            </div>
                            <br>
                            <div class="nes-field mb-4">
                                <label for="videntificacion"> Identificación</label>
                                <input type="text" name="videntificacion" class="nes-input" required value="{{dueno.IDENTIFICACION}}">
                            </div>
                            <br>
                            <div class="nes-field mb-4">
                                <label for="vdireccion_residencia"> Direccion residencia</label>
                                <textarea name="vdireccion_residencia" class="nes-textarea" required>{{dueno.DIRECCION_RESIDENCIA}}</textarea>
                            </div>
                            <br>
                            <div class="nes-field mb-4">
                                <label for="vtelefono_dueno"> Numeros personales</label>
                                <input type="text" name="vtelefono_dueno" class="nes-input" placeholder="00000000,00000000,00000000" value="{{telefonos}}">
                            </div>
                        </div>
                        <br>
                        <a href="/duenos" class="nes-btn" style="padding: 8px !important;">Cancelar</a>
                        <button type="submit" class="nes-btn is-success" style="padding: 8px !important;">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
        });
    }
</script>